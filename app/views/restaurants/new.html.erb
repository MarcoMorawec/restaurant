<h2>Create a new restaurant</h2>

<%= form_for(:restaurant, :url => {:action => 'create'}) do |f| %>

	<%= f.label :name, "Restaurant Name" %>
	<%= f.text_field(:name) %>
	<p>
	<%= f.label :description, "Restaurant description" %>
	<%= f.text_field(:description) %>
	<p>
	<%= f.label :street, "Restaurant street" %>
	<%= f.text_field(:street) %>		
	<p>
	<%= f.label :streetnumber, "Restaurant streetnumber" %>
	<%= f.text_field(:streetnumber) %>
	<p>
	<%= f.label :city, "Restaurant city" %>
	<%= f.text_field(:city) %>
	<p>
	<%= f.label :zipcode, "Restaurant zipcode" %>
	<%= f.text_field(:zipcode) %>
	<p>
	<%= f.label :state, "Restaurant state" %>
	<%= f.text_field(:state) %>		
	<p>
	<%= f.label :country, "Restaurant country" %>
	<%= f.text_field(:country) %>
	<p>
	<%= f.label :phonenumber, "Restaurant phonenumber" %>
	<%= f.text_field(:phonenumber) %>
	<p>
	<%= submit_tag "Create Restaurant" %>

<% end %>

 